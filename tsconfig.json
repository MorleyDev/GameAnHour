{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "es2017",
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true
    },
    "exclude": [
        "webpack.config.js",
        "node_modules/**/*",
        "dist/**/*",
        "engine/**/*"
    ]
}
