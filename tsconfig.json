{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "target": "es2017",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "webpack.config.js",
        "dist/**/*"
    ]
}
