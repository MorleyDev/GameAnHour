{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "outDir": "out",
        "allowJs": true
    },
    "exclude": [
        "webpack.config.js"
    ]
}
