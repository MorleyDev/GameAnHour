{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "target": "es3",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "strict": true
    },
    "exclude": [
        "webpack.config.js",
        "dist/**/*"
    ]
}
